{
  "scripts": {
    "lint": "eslint src/ --max-warnings=0 && prettier --check src/",
    "lint:fix": "eslint src/ --fix && prettier --write src/",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-typescript": "^7.15.0",
    "@google/clasp": "^2.4.1",
    "@types/google-apps-script": "^1.0.37",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|js)"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/src/$1"
    }
  }
}
